@{
    ViewData["Title"] = "Reports";
}

<div class="mb-4">
    <h2 class="h4 mb-1">Reports & Analytics</h2>
    <p class="text-muted small mb-0">Generate and export compliance reports</p>
</div>

<div class="row g-4">
    <!-- Report Cards -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-primary">
                    <i class="bi bi-file-earmark-text display-4"></i>
                </div>
                <h5 class="card-title">Equipment Log History</h5>
                <p class="card-text text-muted small">Complete activity history for specific equipment within a date range.</p>
                <button class="btn btn-outline-primary w-100 mt-3" data-bs-toggle="modal" data-bs-target="#reportModal">Generate</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-success">
                    <i class="bi bi-check-circle display-4"></i>
                </div>
                <h5 class="card-title">PM Compliance</h5>
                <p class="card-text text-muted small">Preventive maintenance execution status vs schedule.</p>
                <button class="btn btn-outline-success w-100 mt-3">Generate</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <div class="mb-3 text-warning">
                    <i class="bi bi-shield-lock display-4"></i>
                </div>
                <h5 class="card-title">User Audit Log</h5>
                <p class="card-text text-muted small">Security and access logs filtered by user role.</p>
                <button class="btn btn-outline-warning w-100 mt-3">Generate</button>
            </div>
        </div>
    </div>
</div>

<!-- Report Configuration Modal (Example) -->
<div class="modal fade" id="reportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Date Range</label>
                        <select class="form-select">
                            <option>Last 7 Days</option>
                            <option>Last 30 Days</option>
                            <option>Custom Range</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Equipment</label>
                        <select class="form-select">
                            <option>All Equipment</option>
                            <option>Bioreactor B-200</option>
                            <option>Autoclave A-10</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Format</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="format" id="pdf" autocomplete="off" checked>
                            <label class="btn btn-outline-danger" for="pdf"><i class="bi bi-file-pdf"></i> PDF</label>

                            <input type="radio" class="btn-check" name="format" id="excel" autocomplete="off">
                            <label class="btn btn-outline-success" for="excel"><i class="bi bi-file-excel"></i> Excel</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Download</button>
            </div>
        </div>
    </div>
</div>
