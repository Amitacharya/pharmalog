@{
    ViewData["Title"] = "E-Log Book";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">Electronic Log Book</h2>
        <p class="text-muted small mb-0">Daily activity logs and operational records</p>
    </div>
    <a href="/LogBook/Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Entry
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Log ID</th>
                        <th>Equipment</th>
                        <th>Activity</th>
                        <th>Date & Time</th>
                        <th>User</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><code>LOG-2023-882</code></td>
                        <td>Bioreactor B-200</td>
                        <td>pH Calibration</td>
                        <td>Oct 24, 2023 08:30</td>
                        <td>John Doe</td>
                        <td><span class="status-badge status-approved">Approved</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><code>LOG-2023-883</code></td>
                        <td>Autoclave A-10</td>
                        <td>Cycle Start - Load A</td>
                        <td>Oct 24, 2023 09:15</td>
                        <td>Sarah Smith</td>
                        <td><span class="status-badge status-pending">Pending</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><code>LOG-2023-884</code></td>
                        <td>HPLC System 04</td>
                        <td>Column Wash</td>
                        <td>Oct 24, 2023 10:45</td>
                        <td>Mike Ross</td>
                        <td><span class="status-badge status-approved">Approved</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
